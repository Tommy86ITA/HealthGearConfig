{
  "$schema": "https://raw.githubusercontent.com/dotnet/Nerdbank.GitVersioning/main/doc/version.schema.json",
  "version": "1.0.0-preview",
  "assemblyVersion": "1.0",
  "fileVersion": "1.0.0",
  "versionHeightOffset": 1000,
  "publicReleaseRefSpec": ["^refs/heads/main$",
    "^refs/tags/v\\d+(?:\\.\\d+){0,2}(?:-[\\w\\d]+)?$"],
  "cloudBuild": {
    "setVersionVariables": true,
    "buildNumber": {
      "enabled": true,
      "includeCommitId": true
    }
  },
  "release": {
    "branchName": "main",
    "semVer": 2,
    "tag": "preview"
  }
}